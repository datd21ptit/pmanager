<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textSize="24sp"
                android:padding="5dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/project_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Deadline"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="25dp"
                android:padding="5dp"

                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/project_description"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Day la mo ta du an. Day la mojt du an demo. This is a project description an you can know you i got nothing to write."

            />
        <ProgressBar
            android:id="@+id/project_progress_bar"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:padding="3.5dp"
            android:progressTint="@color/forgot_password__color"
            android:progressBackgroundTint="@color/rectangle_1_color"
            android:progress="25"
            android:background="@drawable/custom_progress_bar_background"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

